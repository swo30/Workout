<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/durationText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Desired workout duration:"
        android:textSize="30sp" />

    <SeekBar
        android:id="@+id/workoutminSeekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="15"
        android:progress="3" />

    <TextView
        android:id="@+id/workoutminText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="60 min"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/emptyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="36sp" />


    <TextView
        android:id="@+id/chestText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Chest time:"
        android:textSize="36sp"
        android:visibility="gone" />

    <SeekBar
        android:id="@+id/chestSeekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="15"
        android:layout_weight="1"
        android:progress="3"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/backText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Back time:"
        android:layout_weight="1"
        android:textSize="36sp"
        android:visibility="gone"/>

    <SeekBar
        android:id="@+id/backSeekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="15"
        android:layout_weight="1"
        android:progress="3"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/biText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Biceps time:"
        android:textSize="36sp"
        android:visibility="gone" />

    <SeekBar
        android:id="@+id/biSeekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:max="15"
        android:progress="3"
        android:visibility="gone" />


    <TextView
        android:id="@+id/triText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Triceps time:"
        android:layout_weight="1"
        android:textSize="36sp"
        android:visibility="gone"/>



    <SeekBar
        android:id="@+id/triSeekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="15"
        android:layout_weight="1"
        android:progress="3"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/shoulderText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Shoulder time:"
        android:layout_weight="1"
        android:textSize="36sp"
        android:visibility="gone"/>

    <SeekBar
        android:id="@+id/shoulderSeekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="15"
        android:layout_weight="1"
        android:progress="3"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/legsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Legs time:"
        android:layout_weight="1"
        android:textSize="36sp"
        android:visibility="gone"/>

    <SeekBar
        android:id="@+id/legsSeekBar"
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="15"
        android:visibility="gone"
        android:progress="3" />


</LinearLayout>